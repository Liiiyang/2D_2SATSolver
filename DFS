package com.example.victorlee.a2sat;

import java.util.ArrayList;
import java.util.List;
import java.util.Set;
import java.util.Stack;

/**
 * Created by victorlee on 2/11/17.
 */

public class DFS {

    private Stack<Literal> stack;


    public DFS(){
        this.stack = new Stack<>();
    }

    public void dfs(List<Literal> literalList) {
        for (Literal v : literalList) {
            if (!v.isVisited()) {
                v.setVisited(true);
                dfsWithStack(v);
            }
        }
    }

            //public List<Set<Integer>> scc(Graph revGraph , Graph implicitGraph) {
            //}

    private void dfsWithStack(Literal rootVertex) {
        this.stack.add(rootVertex);
        rootVertex.setVisited(true);
        while (!stack.isEmpty()) {
            Literal actualVertex = this.stack.pop();
            System.out.println(actualVertex + " ");
                for (Literal v : actualVertex.getNeighbourList()) {
                    if (!v.isVisited()) {
                        v.setVisited(true);
                        this.stack.push(v);
                    }
                }
            }
    }
}
